doctype html
html
    head
        title cratol
        link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet' href='/css/style.css')
    body    
        nav.navbar.navbar-inverse
            .contatiner
            .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href="/") Cratol Tech 
            #navbar.collapse.navbar-collapse
                ul.nav.navbar-nav
                    li
                        a(href="/") Home
                    if user
                        li
                            a(href="/solutions/add") Add Solution
                        li
                            a(href="/projects/add") Add Your Project

                ul.nav.navbar-nav.navbar-right
                    if user
                        li 
                           a(href='/users/logout')  Logout
                    else
                        li
                            a(href='/users/register') Register
                        li
                            a(href='/users/login') Login
            
                
                form.form-inline.my-2.my-lg-0
                input.form-control.mr-sm-2(type='text', placeholder='Search', aria-label='Search')
                button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
        .container
            !=messages('message', locals)
            if errors
                each error, i in errors
                    div(class='alert alert-danger') #{error.msg}
            block content
            br
            hr
            footer 
                p Copyright &copy; 2017

        script(src='/bower_components/jquery/dist/jquery.js')
        script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
        script(src='/js/main.js')